{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
